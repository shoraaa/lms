<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.Tile?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <VBox maxHeight="-Infinity" spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="50.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Tile description="%documentTitle" title="%title" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="titleTextField" editable="false" promptText="%nameRequired" styleClass="text-field" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="50.0">
                     <children>
                        <Tile description="%industryIdentifiers" title="ISBN" />
                        <Region />
                        <TextField fx:id="isbnTextField" editable="false" promptText="%isbnOptional" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Tile description="%documentPublisher" prefHeight="42.0" prefWidth="310.0" title="%publisher" />
                        <Region />
                        <TextField fx:id="publisherTextField" editable="false" prefHeight="36.0" prefWidth="217.0" promptText="%publisherOptional" styleClass="sidebar-button" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Tile description="%documentLanguage" prefHeight="42.0" prefWidth="310.0" title="%language" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="languageTextField" editable="false" prefHeight="36.0" prefWidth="211.0" promptText="%languageOptional" styleClass="text-field" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Tile description="%documentPublicationDate" prefHeight="42.0" prefWidth="310.0" title="%publicationDate" />
                        <Region HBox.hgrow="ALWAYS" />
                        <DatePicker fx:id="publishedDatePicker" disable="true" editable="false" promptText="%publicationDateOptional" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Tile description="%documentQuantity" prefHeight="42.0" prefWidth="310.0" title="%quantity" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Spinner fx:id="quantitySpinner" disable="true" prefHeight="36.0" prefWidth="212.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Tile description="Please enter the user's name:" prefHeight="42.0" prefWidth="310.0" title="Description" />
                        <TextArea fx:id="descriptionTextArea" editable="false" prefHeight="100.0" prefWidth="212.0" promptText="Insert description" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <VBox alignment="TOP_CENTER" minWidth="564.0" prefHeight="870.0" prefWidth="564.0" spacing="20.0">
               <children>
                  <ImageView fx:id="documentImageView" fitHeight="449.0" fitWidth="377.0" pickOnBounds="true" preserveRatio="true" />
                  <Button fx:id="selectImageButton" defaultButton="true" disable="true" mnemonicParsing="false" text="%selectImage" />
                  <HBox alignment="CENTER_LEFT" prefHeight="140.0" prefWidth="535.0">
                     <children>
                        <Tile description="%documentAuthors" prefHeight="42.0" prefWidth="310.0" title="%authors" />
                        <VBox prefHeight="100.0" prefWidth="211.0" spacing="10.0">
                           <children>
                              <TextField fx:id="authorTextField" editable="false" promptText="%author" />
                              <ListView fx:id="authorListView" prefHeight="200.0" prefWidth="211.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="148.0" prefWidth="535.0">
                     <children>
                        <Tile description="%documentCategories" prefHeight="42.0" prefWidth="310.0" title="%categories" />
                        <VBox prefHeight="100.0" prefWidth="211.0" spacing="10.0">
                           <children>
                              <TextField fx:id="categoryTextField" editable="false" promptText="%category" />
                              <ListView fx:id="categoryListView" prefHeight="200.0" prefWidth="200.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <VBox alignment="TOP_CENTER" minWidth="575.0" prefHeight="913.0" prefWidth="575.0" spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="title-3" stylesheets="@../css/cupertino-light.css" text="%transactionsHistory" />
                  <TableView fx:id="transactionTable" prefHeight="991.0" prefWidth="535.0" VBox.vgrow="ALWAYS" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER" prefHeight="158.0" spacing="20.0">
         <children>
            <Button fx:id="clearButton" defaultButton="true" disable="true" mnemonicParsing="false" prefWidth="100.0" text="%clear" />
            <Button fx:id="fetchButton" defaultButton="true" disable="true" mnemonicParsing="false" prefWidth="100.0" text="%fetch" />
            <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" prefHeight="36.0" prefWidth="100.0" text="%edit" />
            <Button alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#closeWindow" prefWidth="100.0" text="%cancel" />
         </children>
      </HBox>
   </children>
</VBox>
