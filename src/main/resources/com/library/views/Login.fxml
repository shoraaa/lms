<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.CustomTextField?>
<?import atlantafx.base.controls.PasswordTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="441.0" prefWidth="365.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.LoginController">
   <children>
      <Label text="%login.title">
         <font>
            <Font name="System Bold" size="45.0" />
         </font>
      </Label>
      <CustomTextField fx:id="usernameTextField" prefHeight="52.0" prefWidth="325.0" promptText="%login.usernamePrompt" />
      <PasswordTextField fx:id="passwordTextField" prefHeight="55.0" prefWidth="325.0" promptText="%login.passwordPrompt" revealPassword="true" />
      <Button fx:id="loginButton" mnemonicParsing="false" prefHeight="61.0" prefWidth="325.0" text="%login.loginButton" />
      <Separator prefWidth="200.0" />
      <Button fx:id="registerButton" mnemonicParsing="false" prefHeight="59.0" prefWidth="325.0" text="%login.registerButton" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
