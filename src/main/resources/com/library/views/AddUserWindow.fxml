<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.Tile?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.AddUserController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Button defaultButton="true" mnemonicParsing="false" text="%selectImage" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" prefHeight="442.0" prefWidth="555.0" spacing="20.0">
         <children>
            <Label styleClass="title-3" stylesheets="@../css/cupertino-light.css" text="Add New User" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Tile description="%userNameDesc" prefHeight="42.0" prefWidth="310.0" title="%userName" />
                  <TextField fx:id="userNameTextField" promptText="Name">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Tile description="%emailDesc" prefHeight="42.0" prefWidth="310.0" title="E-mail" />
                  <TextField fx:id="userEmailTextField" promptText="E-mail">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Tile description="%phoneNumberDesc" prefHeight="42.0" prefWidth="310.0" title="%phoneNumber" />
                  <TextField fx:id="userPhoneNumberTextField" promptText="Phone Number">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="48.0">
               <children>
                  <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" prefWidth="100.0" text="%save" />
                  <Button fx:id="cancelButton" cancelButton="true" defaultButton="true" mnemonicParsing="false" prefWidth="100.0" text="%cancel" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</HBox>
