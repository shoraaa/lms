<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.DocumentsViewController">
   <children>
      <HBox alignment="CENTER" fillHeight="false" spacing="48.0" VBox.vgrow="ALWAYS">
         <children>
            <Label alignment="CENTER" styleClass="title-2" stylesheets="@../css/cupertino-light.css" text="Documents List">
               <HBox.margin>
                  <Insets right="400.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="searchTextField" prefHeight="48.0" prefWidth="400.0" promptText="Search" />
            <Button fx:id="addButton" mnemonicParsing="false" prefHeight="48.0" prefWidth="100.0" scaleShape="false" styleClass="blue-colored-btn" stylesheets="@../css/style.css" text="Add" textFill="WHITE" />
            <Button fx:id="filterButton" mnemonicParsing="false" prefHeight="48.0" prefWidth="100.0" scaleShape="false" styleClass="blue-colored-btn" stylesheets="@../css/style.css" text="Filter" textFill="WHITE" />
            <Button fx:id="deleteButton" mnemonicParsing="false" prefHeight="48.0" prefWidth="100.0" styleClass="blue-colored-btn" stylesheets="@../css/style.css" text="Delete" textFill="WHITE" />
         </children>
         <padding>
            <Insets bottom="20.0" top="29.0" />
         </padding>
      </HBox>
      <VBox fx:id="mainLayout" alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" stylesheets="@../style.css" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="documentTable" minHeight="744.0" prefWidth="1660.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </TableView>
            <Separator prefWidth="200.0" />
            <HBox alignment="CENTER" spacing="48.0">
               <children>
                  <Label fx:id="totalDocumentsLabel" styleClass="title-4" stylesheets="@../css/cupertino-light.css" text="Total Documents: 0" />
                  <Button fx:id="importFromCSVButton" mnemonicParsing="false" prefHeight="48.0" prefWidth="200.0" scaleShape="false" styleClass="blue-colored-btn" stylesheets="@../css/style.css" text="Import from CSV" textFill="WHITE" />
                  <Button fx:id="exportToCSVButton" mnemonicParsing="false" prefHeight="48.0" prefWidth="200.0" scaleShape="false" styleClass="blue-colored-btn" stylesheets="@../css/style.css" text="Export to CSV" textFill="WHITE" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
         <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </opaqueInsets>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </padding>
      </VBox>
   </children>
</VBox>
