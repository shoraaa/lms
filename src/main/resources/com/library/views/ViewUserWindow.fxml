<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.CustomTextField?>
<?import atlantafx.base.controls.PasswordTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" prefHeight="649.0" prefWidth="365.0" spacing="20.0">
         <children>
            <HBox spacing="20.0">
               <children>
                  <CustomTextField fx:id="firstNameTextField" disable="true" editable="false" prefHeight="52.0" prefWidth="325.0" promptText="%firstName" />
                  <CustomTextField fx:id="surNameTextField" disable="true" editable="false" prefHeight="52.0" prefWidth="325.0" promptText="%surName" />
               </children>
            </HBox>
            <PasswordTextField fx:id="passwordTextField" disable="true" editable="false" prefHeight="57.0" prefWidth="325.0" promptText="%password" />
            <CustomTextField fx:id="phoneNumberTextField" disable="true" editable="false" prefHeight="52.0" prefWidth="325.0" promptText="%phoneNumber" />
            <CustomTextField fx:id="emailTextField" disable="true" editable="false" prefHeight="52.0" prefWidth="325.0" promptText="%emailAddress" />
            <ChoiceBox fx:id="roleChoiceBox" disable="true" prefHeight="55.0" prefWidth="325.0" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <Separator orientation="VERTICAL" prefHeight="200.0" />
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" text="%cancel" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</HBox>
