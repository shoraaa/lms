<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.Tile?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="693.0" prefWidth="555.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.AddTransactionController">
   <children>
      <Label styleClass="title-3" stylesheets="@../css/cupertino-light.css" text="Add New Transaction" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Tile description="Please enter the user's name:" prefHeight="42.0" prefWidth="310.0" title="User" />
            <TextField fx:id="userNameTextField" promptText="Name">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Tile description="Please enter the document name:" prefHeight="42.0" prefWidth="310.0" title="Document" />
            <TextField fx:id="userEmailTextField" promptText="E-mail">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Tile description="Please enter the borrow date:" prefHeight="42.0" prefWidth="310.0" title="Borrow Date" />
            <DatePicker />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="48.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" prefWidth="100.0" styleClass="blue-colored-btn" stylesheets="@../css/style.css" text="Save" textFill="WHITE" />
            <Button fx:id="cancelButton" mnemonicParsing="false" prefWidth="100.0" styleClass="blue-colored-btn" stylesheets="@../css/style.css" text="Cancel" textFill="WHITE" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
