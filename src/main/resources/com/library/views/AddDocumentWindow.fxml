<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.AddDocumentController">
   <children>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="470.0" prefWidth="386.0" spacing="16.0" styleClass="sidebar">
         <children>
            <Label alignment="CENTER" styleClass="title-text" text="Add a document" />
            <Label fx:id="statusLabel" />
            <TextField fx:id="titleTextField" prefWidth="263.0" promptText="Name (required)" styleClass="text-field" />
            <TextField fx:id="isbnTextField" promptText="ISBN (optional)" />
            <TextField fx:id="publisherTextField" promptText="Publisher (optional)" styleClass="sidebar-button" />
            <DatePicker fx:id="publishedDatePicker" promptText="Year of Publication (optional)" />
            <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
              <buttons>
                  <Button fx:id="saveButton" mnemonicParsing="false" styleClass="sidebar-button" text="Save" />
                  <Button fx:id="clearButton" mnemonicParsing="false" styleClass="sidebar-button" text="Clear" />
                  <Button fx:id="fetchButton" mnemonicParsing="false" styleClass="sidebar-button" text="Fetch" />
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#closeWindow" styleClass="sidebar-button" text="Cancel" />
              </buttons>
            </ButtonBar>
         </children>
         <HBox.margin>
            <Insets top="20.0" />
         </HBox.margin>
      </VBox>
      <VBox prefHeight="470.0" prefWidth="271.0" spacing="20.0">
         <children>
            <TextField fx:id="authorTextField" promptText="Author" />
            <ListView fx:id="authorListView" prefHeight="200.0" prefWidth="200.0" />
            <TextField fx:id="categoryTextField" promptText="Category" />
            <ListView fx:id="categoryListView" prefHeight="200.0" prefWidth="200.0" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</HBox>
