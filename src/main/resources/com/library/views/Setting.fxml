<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.Tile?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.SettingController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Tile description="Select the system theme." title="Theme" />
            <Region HBox.hgrow="ALWAYS" />
            <ChoiceBox fx:id="themeChoiceBox" prefHeight="46.0" prefWidth="278.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Tile description="Select the system language." title="Language" />
            <Region HBox.hgrow="ALWAYS" />
            <ChoiceBox fx:id="languageChoiceBox" prefHeight="43.0" prefWidth="276.0" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
